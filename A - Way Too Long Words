#include<iostream>
#include<string.h>
using namespace std;
int main()
{
    int i,n,len;
    char a[100];
    cin>>n;
    for(i=0; i<n; i++)
    {
        cin>>a;
        len=strlen(a);
        if(len>10)
        {
            cout<<a[0]<<len-2<<a[len-1]<<endl;
        }
        else{
            cout<<a<<endl;
        }
    }
    return 0;
}
