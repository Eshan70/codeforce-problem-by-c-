#include<bits/stdc++.h>
using namespace std;
 
int main()
{
    int t,i;
    cin>>t;
 
    while(t--)
    {
               int n;
                cin>>n;
                int count=0,count1=0;
                for(int i=0;i<n;i++){
                    int x;
                    cin>>x;
                    if(x==1)
                    count++;
                    else
                     count1++;
                }
                int a1=0,a2=0;
                if(count1%2==1)
                    a1+=2;
                if(a1==0){
                    if(count%2==0){
                        cout<<"YES"<<endl;;
                    }
                    else{
                        cout<<"NO"<<endl;
                    }
                }
                else{
                    if(count>=2){
                        if((count-2)%2==0){
                            cout<<"YES"<<endl;
                        }
                        else{
                            cout<<"NO"<<endl;
                        }
                    }
                    else{
                        cout<<"NO"<<endl;
                    }
                }
    }
}
 
