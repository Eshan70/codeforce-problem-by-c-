#include <bits/stdc++.h>
#include <string>
using namespace std;
 
int main() {
    int t;
    cin>>t;
    while(t--)
    {
            int n,m;
            cin>>n>>m;
            int d=abs(n-m);
            if(n>=m)
            {
                if(d%2==0)
                {
                        cout<<"YES"<<endl;
                }
                else
                {
                        cout<<"NO"<<endl;
                }
            }
            else
            {
                    cout<<"NO"<<endl;
            }
    }
 
 
}
