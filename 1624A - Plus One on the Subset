#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
     int n;
     cin>>n;
     int arr[n];
     int ans=0;
     int i;
     for(i=0;i<n;i++)
     {
         cin>>arr[i];
     }
     sort(arr,arr+n);
     for(i=0;i<n-1;i++)
     {
         ans+=arr[i+1]-arr[i];
     }
     cout<<ans<<endl;
 
    }}
