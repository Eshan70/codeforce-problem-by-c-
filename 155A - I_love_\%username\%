#include<iostream>
using namespace std;
int main()
{
    int a,count=0;
    cin>>a;
    int arr[a];

    for(int i=0; i<a; i++)
    {
        cin>>arr[i];
    }

    int max=arr[0];
    int min=arr[0];
    //int count++;
for(int i=0; i<a; i++)
{


    if(max<arr[i])
    {
        max=arr[i];
        count++;
    }
    if(min>arr[i])
    {
        min=arr[i];
        count++;
    }
}
    cout<<count;
}
