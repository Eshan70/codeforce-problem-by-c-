#include<iostream>
using namespace std;

int main()
{
    int n;
    cin>>n;
    int pulice=0;
    int crime=0;


    for(int i=0; i<n; i++)
    {
     int w;
     cin>>w;

     if(w>0)
     {
         pulice+=w;
     }
     else{

        if(pulice<1)
        {
            crime++;
        }
        else{
            pulice--;
        }
     }
     //cout<<crime;

    }
    cout<<crime;
}
