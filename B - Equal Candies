#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
 
    while(t--)
    {
        int n;
        cin>>n;
        int arr[n];
        int min=0;
        for(int i=0; i<n; i++)
        {
            cin>>arr[i];
 
        }
        sort(arr,arr+n);
        int count1=0;
        for(int i=0; i<n; i++)
        {
           count1+=(arr[i]-arr[0]);
        }
        cout<<count1<<endl;
    }
}
