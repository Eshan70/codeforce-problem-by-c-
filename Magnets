#include<iostream>
using namespace std;
int main()
{
    int a,count=1;
    cin>>a;
    int array[a];
    for(int i=0; i<a; i++)
    {
        cin>>array[i];
    }
    for(int i=0; i<a-1; i++)
    {
        if (array[i]!= array[i+1])
        {
            count++;
        }
    }
    cout<<count;
}
