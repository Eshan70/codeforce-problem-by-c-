#include<iostream>
using namespace std;
 
int main() {
int t;
cin>>t;
while(t--) {
        int n;
        cin>>n;
        char a;
        int count=0,sum=0;
 
        for(int i=0; i<n; i++) {
                cin>>a;
                if(a=='-')
                        count++;
                else
                        sum++;
        }
        cout<<abs(count - sum) <<endl;
}
}
