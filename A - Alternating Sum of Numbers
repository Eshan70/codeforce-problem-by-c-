#include<iostream>
using namespace std;
 
int main()
{
    int t;
    cin>>t;
 
    while(t--)
    {
        int n;
        cin>>n;
        int arr[n];
        int count=0;
        int count1=0;
        for(int i=0; i<n; i++)
        {
            cin>>arr[i];
            if(i%2==0)
            {
                count+=arr[i];
            }
            else
            {
                count1+=arr[i];
            }
        }
        cout<<count-count1<<endl;
    }
}
