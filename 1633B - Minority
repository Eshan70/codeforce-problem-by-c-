#include <iostream>
#include<bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;
    while (t--) {
         string s;
        cin>>s;
        int count=0,count1=0;
        for(int i=0;i<s.size();i++)
        {
            if(s[i]=='0')
                count++;
            else
            count1++;
        }
        if(count!=count1)
        cout<<min(count,count1)<<endl;
        else
        cout<<count-1<<endl;
    }
}


